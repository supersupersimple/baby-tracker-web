# Environment variables template for Baby Tracker
# Copy this file to .env and fill in your actual values

# Database Configuration
# For local development - SQLite
DATABASE_URL="file:./prisma/prisma/dev.db"

# For production - add your production database URL
# DATABASE_URL="your-production-database-url"
# DATABASE_AUTH_TOKEN="your-database-token"

# NextAuth.js Configuration
# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secure-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers - REQUIRED for authentication
# Get these from Google Cloud Console (console.cloud.google.com):
# 1. Create a new project or select existing
# 2. Enable Google+ API 
# 3. Go to Credentials > Create Credentials > OAuth 2.0 Client IDs
# 4. Set authorized redirect URIs: http://localhost:3000/api/auth/callback/google
# 5. For production, add: https://your-domain.com/api/auth/callback/google

GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Safety and Resource Limits
# Maximum number of registered accounts
MAX_ACCOUNTS=100

# Maximum babies per user
MAX_BABIES_PER_USER=3

# Maximum shared users per baby (excluding owner)
MAX_SHARED_USERS_PER_BABY=5

# Maximum activities per day for one baby
MAX_ACTIVITIES_PER_DAY=50

# Maximum total activities for one baby
MAX_TOTAL_ACTIVITIES_PER_BABY=10000

# Admin Configuration
# Comma-separated list of admin emails (can access /api/admin/* endpoints)
ADMIN_EMAILS="admin@example.com,another-admin@example.com"